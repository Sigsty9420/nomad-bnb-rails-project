<div class="panel panel-default">
  <div class="panel-heading">
    Create a new room
  </div>
  <div class="panel-body">
    <div class="container">

      <%= form_for @room do |f| %>

        <div class="row">

          <div class="col-md-4 select">
            <div class="form-group">
              <label>Property Type</label>
              <%= f.select :property_type, [["Apartment", "Apartment"], ["House","House"],["Bed & Breakfast","Bed & Breakfast"] ], id: "property_type", prompt: "Select" class: "form-control" %>
            </div>
          </div>

          <div class="col-md-4 select">
            <div class="form-group">
              <label>Room Type</label>
              <%= f.select :room_type, [["Entire", "Entire"], ["Private","Private"],["Shared","Shared"] ], id: "room_type", prompt: "Select" class: "form-control" %>
            </div>
          </div>

          <div class="col-md-4 select">
            <div class="form-group">
              <label>Accommodates</label>
              <%= f.select :accommodates, [["1 guest", 1], ["2 guests", 2], ["3 guests", 3], ["4 guests", 4], ["5 guests", 5], ["6+ guests", 6]], id: "accommodates", prompt: "Select" class: "form-control" %>
            </div>
          </div>

        </div>
      <% end %>

    </div>
  </div>
</div>
